@model IEnumerable<Forum>
<!--Start of Forums Container (Forum Title + Subforum List + Collapsible Button)-->

@foreach (var forum in Model)
{
    <section class="forum-container">

        <!--Forum Header-->
        <div class="bg-gradient row" aria-expanded="true">

            <h2 class="col-6 list-title-font">@forum.Name</h2>

            <a class="col-6" href="#collapseContent-@forum.ForumId" data-bs-toggle="collapse" data-target="collapseContent-@forum.ForumId" role="button" aria-expanded="true"
               aria-controls="collapseContent-@forum.ForumId">
                <i class="fa-solid fa-minus icon-right" style="color: #2d293c;"></i>
                <i class="fa-solid fa-plus icon-right" style="color: #2d293c;"></i>
            </a>

        </div>

        <div class="show" id="collapseContent-@forum.ForumId">

            <ul>
                @{
                    var count = 0;
                    foreach (var subforum in forum.Subforums)
                    {
                        if (count%2 > 0)
                        {
                            subforum.BackgroundColor = "light";
                        }
                        else
                        {
                            subforum.BackgroundColor = "dark";
                        }
                        @await Html.PartialAsync("_SubforumContainer", subforum);

                        count++;
                    }
                }
            </ul>

        </div>
    </section>
}
<!--End of Forums Container-->