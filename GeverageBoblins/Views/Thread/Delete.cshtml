@model Thread

<h2>Delete Thread</h2>

<h3>Are you sure you want to delete this thread?</h3>

<div>

    <h4>Thread</h4>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">Thread Id</dt>
        <dd class="col-sm-10">@Model.ThreadId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ThreadId" method="post">

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>

    </form>

</div>