@model Forum

<h2>Delete Forum</h2>

<h3>Are you sure you want to delete this forum?</h3>

<div>

    <h4>Forum</h4>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">Forum Id</dt>
        <dd class="col-sm-10">@Model.ForumId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ForumId" method="post">

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>

    </form>

</div>