@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<style>
    .content-container {
        box-shadow: 0 0 4px 1px #FFFEEB, 0 0 6px 2px #f9a3b2 !important;
        max-width: 400px;  /* Increased the width */
        margin: 0 auto;
        padding: 20px;  /* Added padding */
    }
    .header-container {
        text-align: center;
        color: white;
        margin-top: 30px; 
        margin-bottom: 20px;
    }
    .description-text {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }
   
    .form-container {
        display: flex;
        justify-content: center;  
        align-items: center;      
        flex-direction: column;  
        margin-top: 30px; 
        height: 100%;             
    }
    .bottom-text {
            text-align: center;
            color: white;
            margin-bottom: 20px;
            margin-top: 30px;
        }
     
   
    
</style>

<div class="header-container mb-2">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="description-text">
    <p>Your login is protected with an authenticator app. Enter your authenticator code below.</p>
</div>  
<div class="content-container rounded background-dark mt-4 pt-2"> <!-- Added classes to match Logout's design -->
    <div class="form-container"> <!-- Container for the form -->
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMachine" class="form-label">
                        <input asp-for="Input.RememberMachine" />
                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                    </label>
                </div>
            </div>
            <div>
                <button type="submit" class="mb-3 login-purple-btn m-auto">Log in</button>
            </div>
        </form>
    </div>  
</div>
<div class="bottom-text">
    <p>
        Don't have access to your authenticator device? You can
        <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" style="color: white">log in with a recovery code</a>.
    </p>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
