@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- HEAD -->
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeverageGoblins.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Fuzzy+Bubbles:wght@700&family=Inter:wght@100;400;700&display=swap"
          rel="stylesheet">

</head>
<!-- END OF HEAD -->

<section class="login-card">
    <div class="row d-flex justify-content-center col-12 mb-5">
        <div class="col-5 border-pink rounded m-20 background-light card pb-2">
            
            <form id="account" method="post">
                
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 mt-4 std-color">Sign in</h1>
                </div>

                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger m-7-5"></div>


                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control custom-form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label custom-form-label">
                            <i class="fa-regular fa-envelope"></i>
                            <span>E-mail </span>
                        </label>
                        <span asp-validation-for="Input.Email" class="text-danger m-7-5"></span>
                    </div>


                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control custom-form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label custom-form-label">
                            <i class="fa-solid fa-key"></i>
                            <span>Password</span>
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger m-7-5"></span>
                    </div>


                <div>
                    <div class="checkbox custom-checkbox mb-3">
                        <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" id="customCheck" />
                        <label asp-for="Input.RememberMe" class="std-color">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>
                </div>

                <div class="d-flex">
                    <button id="login-submit" type="submit" class="mb-3 login-purple-btn m-auto">Log in</button>
                </div>

                <div class="text-center">
                    <p>
                        <a id="forgot-password" class="alt-link" asp-page="./ForgotPassword">(Forgot your password?)</a>
                    </p>
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
