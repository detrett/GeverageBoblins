@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- HEAD -->
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeverageGoblins.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Fuzzy+Bubbles:wght@700&family=Inter:wght@100;400;700&display=swap"
          rel="stylesheet">

</head>
<!-- END OF HEAD -->

<section class="register-card">
    <div class="row d-flex justify-content-center col-12 mb-5">
        <div class="col-5 border-pink rounded m-20 background-light card pb-2">

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 mt-4 std-color">Create a new account</h1>
                </div>

                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger m-7-5"></div>

                <div class="form-floating mb-2">
                    <input asp-for="Input.UserName" class="form-control custom-form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.UserName" class="form-label custom-form-label">
                        <i class="fa-regular fa-user"></i>
                        <span>Username</span>
                    </label>
                    <span asp-validation-for="Input.UserName" class="text-danger m-7-5 pb-1"></span>

                </div>

                <div class="form-floating mb-2">
                    <input asp-for="Input.Email" class="form-control custom-form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label custom-form-label">
                        <i class="fa-regular fa-envelope"></i>
                        <span>E-mail</span>
                    </label>
                    <span asp-validation-for="Input.Email" class="text-danger m-7-5 pb-1"></span>

                </div>

                <div class="form-floating mb-2">
                    <input asp-for="Input.Password" class="form-control custom-form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label custom-form-label">
                        <i class="fa-solid fa-key"></i>
                        <span>Password</span>
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger m-7-5 pb-1"></span>

                </div>

                <div class="form-floating mb-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control custom-form-control  " autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" class="form-label custom-form-label">
                        <i class="fa-solid fa-key"></i>
                        <span>Repeat password</span>
                    </label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger m-7-5 pb-1"></span>

                </div>

                <div class="d-flex">
                    <button id="registerSubmit" type="submit" class="mb-5 login-pink-btn m-auto">Register</button>
                </div>

            </form>

        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
